                <CheckBox Content="CAM 15" HorizontalAlignment="Left" Margin="430,34,0,0" x:Name="chkCam15" VerticalAlignment="Top" IsChecked="{Binding TallyCam15}" Style="{DynamicResource TallyCheckBox}"/>
                <CheckBox Content="CAM 16" HorizontalAlignment="Left" Margin="500,34,0,0" x:Name="chkCam16" VerticalAlignment="Top" IsChecked="{Binding TallyCam16}" Style="{DynamicResource TallyCheckBox}"/>
            </Grid>
