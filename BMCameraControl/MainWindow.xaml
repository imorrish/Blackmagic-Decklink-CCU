<Window 
    x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:vm="clr-namespace:BMCameraControl" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" 
    Title="Blackmagic Studio Camera CCU" 
    Height="1080" 
    Width="983" 
    Background="{DynamicResource BaseBrush}" 
    WindowState="Maximized" 
    Icon="Martynamru-Leather-Camera.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Monotone.Brushes.xaml"/>
                <ResourceDictionary Source="Monotone.Colors.xaml"/>
                <ResourceDictionary Source="Monotone.xaml"/>
                <ResourceDictionary Source="Monotone.ExtendedWPFToolkit.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        	<LinearGradientBrush x:Key="AudioLampRed" EndPoint="0.5,1" StartPoint="0.5,0">
        		<GradientStop Color="#FFFD0000" Offset="0"/>
        		<GradientStop Color="#FF510000" Offset="1"/>
        		<GradientStop Color="Red" Offset="0.532"/>
        		<GradientStop Color="#FFD30000" Offset="0.54"/>
        	</LinearGradientBrush>
        	<LinearGradientBrush x:Key="AudioLampGreen" EndPoint="0.5,1" StartPoint="0.5,0">
        		<GradientStop Color="#FF00FD00" Offset="0"/>
        		<GradientStop Color="#FF005100" Offset="1"/>
        		<GradientStop Color="Lime" Offset="0.532"/>
        		<GradientStop Color="#FF00D300" Offset="0.54"/>
        	</LinearGradientBrush>
        	<ItemsPanelTemplate x:Key="MidiButtonPanelTemplate">
        		<WrapPanel IsItemsHost="True"/>
        	</ItemsPanelTemplate>
        	<DataTemplate x:Key="MidiButtonTemplate">
        				<Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="45" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Command="{Binding ButtonCommand, Mode=OneWay}" Margin="0,0,5,5">
        					<Button.ContextMenu>
        						<ContextMenu>
        							<MenuItem Header="Edit Button" Command="{Binding EditOnCommand, Mode=OneWay}" />
								</ContextMenu>
							</Button.ContextMenu>
        					<Grid>
        						<Border BorderThickness="1" VerticalAlignment="Top" Height="14" Margin="30,0">
        							<Border.Style>
        								<Style TargetType="{x:Type Border}">
        									<Style.Triggers>
        										<DataTrigger Binding="{Binding IsOn}" Value="True">
        											<Setter Property="Background" Value="{DynamicResource AudioLampGreen}"/>
        										</DataTrigger>
        										<DataTrigger Binding="{Binding IsOn}" Value="False">
        											<Setter Property="Background" Value="{DynamicResource AudioLampRed}"/>
        										</DataTrigger>
        									</Style.Triggers>
        								</Style>
        							</Border.Style>
        						</Border>
        						<Grid Margin="0,15,0,0">
        							<Label Content="{Binding ButtonTitle}" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        						</Grid>
        						<Popup Placement="Top" IsOpen="{Binding IsInEditMode}">
        							<Border Width="200" BorderBrush="{DynamicResource BaseBorderBrush}" BorderThickness="1" Background="{DynamicResource BaseBrush}">
        								<StackPanel>
        									<TextBox Height="23" TextWrapping="Wrap" Text="{Binding ButtonTitle}"/>
        									<TextBox Height="23" TextWrapping="Wrap" Text="{Binding OnCommand}"/>
        									<TextBox Height="23" TextWrapping="Wrap" Text="{Binding OffCommand}"/>
        									<Button Content="Save" Command="{Binding EditOffCommand, Mode=OneWay}"/>
        								</StackPanel>
        							</Border>
        						</Popup>
        					</Grid>
        				</Button>
        	</DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Key="F13" Modifiers="Control+Alt" Command="{Binding SelectedCamara.CcuLenseFocus.GoFarCommand}" CommandParameter="0,0005"/>
        <KeyBinding Key="F13" Modifiers="Control" Command="{Binding SelectedCamara.CcuLenseFocus.GoNearCommand}" CommandParameter="0,0005"/>
        <KeyBinding Key="F14" Modifiers="Control+Alt" Command="{Binding SelectedCamara.CcuLenseFocus.GoFarCommand}" CommandParameter="0,001"/>
        <KeyBinding Key="F14" Modifiers="Control" Command="{Binding SelectedCamara.CcuLenseFocus.GoNearCommand}" CommandParameter="0,001"/>
        <KeyBinding Key="F15" Modifiers="Control+Alt" Command="{Binding SelectedCamara.CcuLenseFocus.GoFarCommand}" CommandParameter="0,003"/>
        <KeyBinding Key="F15" Modifiers="Control" Command="{Binding SelectedCamara.CcuLenseFocus.GoNearCommand}" CommandParameter="0,003"/>
        <KeyBinding Key="F16" Modifiers="Control+Alt" Command="{Binding SelectedCamara.CcuLenseFocus.GoFarCommand}" CommandParameter="0,005"/>
        <KeyBinding Key="F16" Modifiers="Control" Command="{Binding SelectedCamara.CcuLenseFocus.GoNearCommand}" CommandParameter="0,005"/>
        <KeyBinding Key="F17" Modifiers="Control+Alt" Command="{Binding SelectedCamara.CcuLenseFocus.GoFarCommand}" CommandParameter="0,007"/>
        <KeyBinding Key="F17" Modifiers="Control" Command="{Binding SelectedCamara.CcuLenseFocus.GoNearCommand}" CommandParameter="0,007"/>
        <KeyBinding Key="F18" Modifiers="Control+Alt" Command="{Binding SelectedCamara.CcuLenseFocus.GoFarCommand}" CommandParameter="0,009"/>
        <KeyBinding Key="F18" Modifiers="Control" Command="{Binding SelectedCamara.CcuLenseFocus.GoNearCommand}" CommandParameter="0,009"/>
